<p id="notice"><%= notice %></p>

<h1>Material</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Interes</th>
      <th>Link</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.nombre %></td>
        <td><%= resource.descripcion %></td>
        <td><%= resource.interes %></td>
        <td><%= resource.link %></td>
        <td><%= resource.parent %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.admin? %>
<br>
<%= link_to 'New Resource', new_resource_path %>
<% end %>